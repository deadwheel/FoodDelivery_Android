<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_collapseMode="parallax">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBasketOfferTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="44.85"
            android:text="sadsadsda"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

        <Button
            android:id="@+id/btBasketOfferModifyQuanity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ZMień" />

        <Button
            android:id="@+id/btBasketOfferRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuń" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Ilość:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBasketOfferQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Cena:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBasketOfferPrice"
            android:layout_width="295dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBasketItemSumLab"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="Suma:"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBasketItemSum"
            android:layout_width="298dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewBasketOfferDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>