<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_collapseMode="parallax">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewBasketOfferTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="44.85"
            android:text="sadsadsda" />

        <Button
            android:id="@+id/btBasketOfferModifyQuanity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ZMień" />

        <Button
            android:id="@+id/btBasketOfferRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Usuń" />
    </LinearLayout>

    <TextView
        android:id="@+id/textViewBasketOfferQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <TextView
        android:id="@+id/textViewBasketOfferPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewBasketOfferDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>